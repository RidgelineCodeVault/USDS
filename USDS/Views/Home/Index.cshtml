<div class="row">
    <div class="col-1">
        <h4>Folders</h4>
        @{
            if (Model.Folders is {Count: > 0})
            {
                foreach (var folder in Model.Folders.OrderBy(o => o.Key))
                {
                    @Html.ActionLink(folder.Value, "Index", "Home",  new {id = folder.Value }, null)
                    <br />
                }
            }
            else
            {
                <p>No folders found</p>
            }
        }
    </div>
    <div class="col-3">
        <h4>Files</h4>
        @{
            if (Model.Files is {Count: > 0})
            {
                foreach (var file in Model.Files)
                {
                    @Html.ActionLink(file.Value, "Index", "Home",  new {fileName = file.Value }, null)
                    <br />
                }
            }
            else
            {
                <p>Select Folder from left</p>
            }
        }
    </div>

    <div class="col-8">
        <h4>File Contents</h4>
        <p>
            @Model.Title @Model.Subject <br />
            @Model.AmDate <br/>
            @Model.RevisionDate <br/>
            @Model.WordCount 
        </p>
            <div>
                @Model.XmlData
            </div>
        
    </div>


</div>